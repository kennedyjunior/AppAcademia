<Window x:Class="AppAcademia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cliente API - Sistema de Academia" Height="550" Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" 
                   Text="Sistema de Gerenciamento de Academia" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="#2c3e50" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Tipo de Recurso:" 
                   FontWeight="Bold" 
                   FontSize="14"/>

        <ComboBox Grid.Row="2" Grid.Column="0" 
                  x:Name="EscolhaAcoes" 
                  SelectionChanged="EscolhaAcoes_SelectionChanged" 
                  Margin="0,5,0,15"/>

        <TextBlock Grid.Row="1" Grid.Column="2" 
                   Text="Ação:" 
                   FontWeight="Bold" 
                   FontSize="14"/>

        <ComboBox Grid.Row="2" Grid.Column="2" 
                  x:Name="EscolhasEndpoint" 
                  SelectionChanged="EscolhasEndpoint_SelectionChanged" 
                  Margin="0,5,0,15"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" 
                    x:Name="painelId" 
                    Visibility="Collapsed" 
                    Margin="0,10">
            <TextBlock Text="ID do Registro:" 
                       FontWeight="Bold" 
                       FontSize="14"/>
            <TextBox x:Name="txtId" 
                     Margin="0,5,0,10"
                     ToolTip="Informe o ID do registro para operações específicas"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" 
                    x:Name="painelDados" 
                    Visibility="Collapsed" 
                    Margin="0,10">
            <TextBlock Text="Dados (Formato JSON):" 
                       FontWeight="Bold" 
                       FontSize="14"/>

            <TextBox x:Name="txtDados" 
                     Height="100" 
                     TextWrapping="Wrap" 
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,5,0,5"
                     FontFamily="Consolas"
                     FontSize="12"
                     ToolTip="Informe os dados no formato JSON"/>

            <Button x:Name="BtnExemploDados" 
                    Content="📋 Preencher com Exemplo" 
                    Click="BtnExemploDados_Click" 
                    Margin="0,0,0,10" 
                    HorizontalAlignment="Left" 
                    Background="#3498db"
                    ToolTip="Preenche automaticamente com um exemplo de JSON"/>
        </StackPanel>

        <Border Grid.Row="5" Grid.ColumnSpan="3"
                Background="#f8f9fa"
                BorderBrush="#dee2e6"
                BorderThickness="1"
                CornerRadius="5"
                Margin="0,10"
                Padding="10"
                Visibility="Collapsed"
                x:Name="painelStatus">
            <TextBlock x:Name="txtStatus"
                       Text="Pronto para executar..."
                       FontStyle="Italic"
                       Foreground="#6c757d"/>
        </Border>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20">

            <Button x:Name="BtnExecutar" 
                    Content="🚀 Executar Requisição" 
                    Click="BtnExecutar_Click" 
                    Background="#27ae60" 
                    Margin="0,0,15,0"
                    ToolTip="Executar a ação selecionada"/>

            <Button x:Name="BtnCancelar" 
                    Content="❌ Cancelar" 
                    Click="BtnCancelar_Click" 
                    Background="#e74c3c"
                    ToolTip="Cancelar requisição em andamento"/>
        </StackPanel>

        <Rectangle Grid.Row="6" Grid.ColumnSpan="3"
                   Fill="#e0e0e0"
                   Height="1"
                   Margin="0,20"
                   VerticalAlignment="Bottom"/>
        <StackPanel Grid.Row="4" Grid.ColumnSpan="3" x:Name="painelFormAluno" Visibility="Collapsed" Margin="0,10">
            <TextBlock Text="Cadastrar Aluno" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,5">
                <TextBox x:Name="txtNome" Height="30" TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="phNome" Text="Nome" 
                   Foreground="Gray" 
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="Visible"/>
            </Grid>

            <Grid Margin="0,0,0,5">
                <TextBox x:Name="txtEmail" Height="30" TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="phEmail" Text="Email"
                   Foreground="Gray"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="Visible"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <TextBox x:Name="txtPlanoId" Height="30" TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="phPlano" Text="ID do Plano"
                   Foreground="Gray"
                   Margin="8,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                   Visibility="Visible"/>
            </Grid>

            <Button Content="🧩 Gerar JSON"
            Click="BtnGerarJson_Click"
            Background="#16a085"
            Margin="0,10,0,0"
            Foreground="White"/>
        </StackPanel>

    </Grid>
</Window>